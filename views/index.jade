    main.result
      p.comment.line // Find unused and duplicate selectors
      img#js-loading.loading.is-hidden(src='/img/zangief.gif')
      result-list#js-result-list

    footer(role="contentinfo")
      p.
        CSSR is crafted by <a href="https://twitter.com/1000ch">1000ch</a>, 
        <a href="https://twitter.com/hiloki">hiloki</a>.<br>
        and powered by <a href="https://github.com/operasoftware/ucss">UCSS</a>.

    script(src='/js/lib.min.js')
